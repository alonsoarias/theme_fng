<footer class="row justify-content-center my-3 my-footer-wrapper">
    <div class="container-fluid">
        {{#abouttext}}
        <div class="row justify-content-center">
            <div class="my-about text-center my-4 my-after-divider">
                <h3> {{{abouttitle}}}</h3>
                {{{abouttext}}}
            </div>
        </div>
        {{/abouttext}}
    </div>
</footer>


